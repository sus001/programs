#include<stdio.h>
void main()
     {
      float a,cr,ch,l,b,h,s,H,r,R;
      int n;
      printf("1 cube \n 2 cylinder \n 3 cuboid \n 4 cone \n 5 sphere");
      printf("\n enter choice");
      scanf("%d",&n);
      switch(n)
            {
             case1:
             printf("\n enter side of cube");
             scanf("%f",&a);
             printf("\n surface area=%f",6*a*a);
             printf("\n volume=%f",a*a*a);
             break;
             case2:
             printf("\n enter height and radius");
             scanf("%f%f",&ch,&cr);
             printf("\n surface area=%f",((2*3.14*(r*a)+(2*3.14*cr*ch)));
             break;
             case3:
             printf("\n enter length,breadth and height");
             scanf("%f%f%f",&l,&b,&h);
             printf("\n surface area =%f",2*(l*b)+(b*h)+(h*l));
             printf("\n volume=%f",l*b*h);
             break;
             case4:
             printf("\n enter slant height,height and radius");
             scanf("%f%f%f",&s,&H,&r);
             printf("\n surface area =%f",(3.14*r*r)+(3.14*r*s));
             printf("\n volume=%f",(1/3*3.14*r*r*4));
             break;
             case5:
             printf("\n enter radius");
             scanf("%f,&r);
             printf("\n surface area =%f",4*3.14*r*r);
             printf("\n volume=%f",((4/3)*3.14*r*r));
             break;
             default:
             printf("\n ***error***");
            }
      }
           
           
   
